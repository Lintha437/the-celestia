        "priority": 4,
        "tick_interval": 1,
        "start_chance": 0.5,
        "search_range": 32,
        "search_height": 24,
        "goal_radius": 0.0,
        "stay_duration": 0.0,
        "target_selection_method": "random",
        "target_offset": [0.0, 0.0, 0.0],
        "target_blocks": ["minecraft:fire", "minecraft:lava"],
        "on_stay_completed": []
      },
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 2,
        "entity_types": [
          {
            "filters": {
              "any_of": [
                {
                  "test": "is_family",
                  "subject": "other",
                  "value": "player"
