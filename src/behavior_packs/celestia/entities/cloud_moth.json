        "add": {
          "component_groups": ["minecraft:silverfish_angry"]
        }
      },
      "minecraft:on_calm": {
        "remove": {
          "minecraft:silverfish_angry": {}
        },
        "add": {
          "component_groups": ["minecraft:silverfish_calm"]
        }
      }
    }
